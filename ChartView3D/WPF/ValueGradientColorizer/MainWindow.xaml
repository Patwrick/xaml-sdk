<Window x:Class="ValueGradientColorizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:ValueGradientColorizer"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl FontSize="22" Margin="4">
            <TabItem Header="Gradient colors">
                <local:SurfaceGradients FontSize="12" />
            </TabItem>
            <TabItem Header="Solid color ranges">
                <local:SolidColorRanges FontSize="12" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>

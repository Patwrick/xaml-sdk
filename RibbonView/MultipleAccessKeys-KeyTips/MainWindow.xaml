<Window x:Class="MultipleAccessKeys_KeyTips.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		
		xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
		Title="MainWindow" Height="350" Width="525">
	<Grid>
		<telerik:RadRibbonView telerik:KeyTipService.IsKeyTipsEnabled="True"
							   telerik:KeyTipService.AccessKeys="{Binding AccessKeys}">
			<telerik:RadRibbonTab Header="Tab 1" telerik:KeyTipService.AccessText="T1" />
			<telerik:RadRibbonTab Header="Tab 2" telerik:KeyTipService.AccessText="T2" />
			<telerik:RadRibbonTab Header="Tab 3" telerik:KeyTipService.AccessText="T3" />
		</telerik:RadRibbonView>
	</Grid>
</Window>

                    <telerik:RadRibbonDropDownButton CollapseToMedium="WhenGroupIsMedium" telerik:ScreenTip.Description="You can insert fields such as Name or Address, which will be replaced automatically with information from a database or contact list for each copy of the form letter." LargeImage="{telerik:IconResource IconRelativePath=32/InsertMergeField.png,IconSources={StaticResource IconSources}}" Size="Large" Text="Insert Merge Field" telerik:ScreenTip.Title="Insert Merge Field"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="Preview Results">
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Shows all fields codes in the current document." LargeImage="{telerik:IconResource IconRelativePath=32/ShowAllFieldsCodes.png,IconSources={StaticResource IconSources}}" Size="Large" Text="Show All Fields Codes" telerik:ScreenTip.Title="Show Fields Codes" />
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Show all fields names in the current document." LargeImage="{telerik:IconResource IconRelativePath=32/ShowAllFieldsDisplayNames.png,IconSources={StaticResource IconSources}}" Size="Large" Text="Show All Fields Names" telerik:ScreenTip.Title="Show Fields Names" />
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Replace the merge fields in your document with actual data from your recipient list so you can see what it looks like." LargeImage="{telerik:IconResource IconRelativePath=32/ShowAllFieldsResults.png,IconSources={StaticResource IconSources}}" Size="Large" Text="Preview Results" telerik:ScreenTip.Title="View Merged Data" />
                    <telerik:Separator/>
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Preview the first record in the recipient list." LargeImage="{telerik:IconResource IconRelativePath=32/First.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="First" telerik:ScreenTip.Title="Preview First Record"/>
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Preview the previous record in the recipient list." LargeImage="{telerik:IconResource IconRelativePath=32/Previous.png,IconSources={StaticResource IconSources}}" Size="Large" Text="Previous" telerik:ScreenTip.Title="Preview Previous Record"/>
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Preview the next record in the recipient list." LargeImage="{telerik:IconResource IconRelativePath=32/Next.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Next" telerik:ScreenTip.Title="Preview Next Record"/>
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Preview the last record in the recipient list." LargeImage="{telerik:IconResource IconRelativePath=32/Last.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Last" telerik:ScreenTip.Title="Preview Last Record"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="Finish">
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Complete the mail merge." LargeImage="{telerik:IconResource IconRelativePath=32/MailMerge.png,IconSources={StaticResource IconSources}}" Size="Large" Text="Mail Merge" telerik:ScreenTip.Title="Finish &amp; Merge"/>
                </telerik:RadRibbonGroup>
            </telerik:RadRibbonTab>
            <telerik:RadRibbonTab Header="Review">
                <telerik:RadRibbonGroup Header="Proofing">
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Check the spelling of text in the document." LargeImage="{telerik:IconResource IconRelativePath=32/EnableSpellCheck.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Spell Check" telerik:ScreenTip.Title="Spelling"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="Comments">
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Add a comment about the selection." LargeImage="{telerik:IconResource IconRelativePath=32/NewComment.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="New Comment" telerik:ScreenTip.Title="Insert Comment"/>
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Delete the selected comment." LargeImage="{telerik:IconResource IconRelativePath=32/DeleteComment.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Delete" telerik:ScreenTip.Title="Delete Comment"/>
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Navigate to the previous comment in the document." LargeImage="{telerik:IconResource IconRelativePath=32/PreviousComment.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Previous" telerik:ScreenTip.Title="Previous Comment"/>
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Navigate to the next comment in the document." LargeImage="{telerik:IconResource IconRelativePath=32/NextComment.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Next" telerik:ScreenTip.Title="Next Comment"/>
                    <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Click here to show or hide the comments." LargeImage="{telerik:IconResource IconRelativePath=32/ShowHideComments.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Show/Hide Comments" telerik:ScreenTip.Title="Show/Hide Comments"/>
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Click here to delete all of the comments in the document." LargeImage="{telerik:IconResource IconRelativePath=32/DeleteAllComments.png,IconSources={StaticResource IconSources}}" Size="Large" Text="Delete All" telerik:ScreenTip.Title="Delete All Comments"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="Tracking &amp; Changes">
                    <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Track all changes made to the document, including insertions, deletions, and formatting changes." LargeImage="{telerik:IconResource IconRelativePath=32/TrackChanges.png,IconSources={StaticResource IconSources}}" Size="Large" Text="Track Changes" telerik:ScreenTip.Title="Track Changes"/>
                    <telerik:RadRibbonSplitButton telerik:ScreenTip.Description="Accept and Move to Next." LargeImage="{telerik:IconResource IconRelativePath=32/AcceptChange.png,IconSources={StaticResource IconSources}}" Size="Large" Text="Accept" telerik:ScreenTip.Title="Accept">
                        <telerik:RadRibbonSplitButton.DropDownContent>
                            <StackPanel>
                                <telerik:RadRibbonButton  Size="Medium" SmallImage="{telerik:IconResource IconRelativePath=16/AcceptChange.png,IconSources={StaticResource IconSources}}" Text="Accept and Move to Next"/>
                                <telerik:RadRibbonButton  Size="Medium" SmallImage="{telerik:IconResource IconRelativePath=16/AcceptChange.png,IconSources={StaticResource IconSources}}" Text="Accept All Changes"/>
                            </StackPanel>
                        </telerik:RadRibbonSplitButton.DropDownContent>
                    </telerik:RadRibbonSplitButton>
                    <telerik:RadRibbonSplitButton telerik:ScreenTip.Description="Reject and Move to Next." LargeImage="{telerik:IconResource IconRelativePath=32/RejectChange.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Reject" telerik:ScreenTip.Title="Reject">
                        <telerik:RadRibbonSplitButton.DropDownContent>
                            <StackPanel>
                                <telerik:RadRibbonButton  Size="Medium" SmallImage="{telerik:IconResource IconRelativePath=16/RejectChange.png,IconSources={StaticResource IconSources}}" Text="Reject and Move to Next"/>
                                <telerik:RadRibbonButton  Size="Medium" SmallImage="{telerik:IconResource IconRelativePath=16/RejectChange.png,IconSources={StaticResource IconSources}}" Text="Reject All Changes"/>
                            </StackPanel>
                        </telerik:RadRibbonSplitButton.DropDownContent>
                    </telerik:RadRibbonSplitButton>
                    <telerik:RadCollapsiblePanel>
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Previous change."  Size="Medium" SmallImage="{telerik:IconResource IconRelativePath=16/PreviousChange.png,IconSources={StaticResource IconSources}}" Text="Previous" telerik:ScreenTip.Title="Previous"/>
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Next change."  Size="Medium" SmallImage="{telerik:IconResource IconRelativePath=16/NextChange.png,IconSources={StaticResource IconSources}}" Text="Next" telerik:ScreenTip.Title="Next"/>
                    </telerik:RadCollapsiblePanel>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="Protect">
                    <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Restrict how people edit specific parts of the document." LargeImage="{telerik:IconResource IconRelativePath=32/ProtectDocument.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Protect Document" telerik:ScreenTip.Title="Toggle Document Protection"/>
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="Shows the dialog for setting editing restrictions to users/groups." LargeImage="{telerik:IconResource IconRelativePath=32/ChangeEditingPermissions.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Editing Restrictions" telerik:ScreenTip.Title="Change Editing Restrictions"/>
                </telerik:RadRibbonGroup>
            </telerik:RadRibbonTab>
            <telerik:RadRibbonTab Header="View">
                <telerik:RadRibbonGroup Header="Document Views">
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="View the document as it would look as a Web page." LargeImage="{telerik:IconResource IconRelativePath=32/web-C.png,IconSources={StaticResource IconSources}}"  Size="Large" Text="Web Layout" telerik:ScreenTip.Title="Web Layout" />
                    <telerik:RadRibbonButton telerik:ScreenTip.Description="View the documetn as it will appear on the printed page." LargeImage="{telerik:IconResource IconRelativePath=32/PageBreak.png,IconSources={StaticResource IconSources}}" Size="Large" Text="Print Layout" telerik:ScreenTip.Title="Print Layout" />
                </telerik:RadRibbonGroup>
            </telerik:RadRibbonTab>
        </telerik:RadRibbonView>
    </Grid>
</telerik:RadRibbonWindow>

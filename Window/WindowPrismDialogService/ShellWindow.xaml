<telerik:RadWindow x:Class="WindowPrismDialogService.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:WindowPrismDialogService"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Header="Docking Shell Application"
        Width="800" Height="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="60" >
            <telerik:RadButton Content="Show Dialog" Command="{Binding ShowDialogCommand}" />
            <TextBlock HorizontalAlignment="Center" Margin="0 10 0 0" Text="{Binding Title}" />
        </StackPanel>
    </Grid>
</telerik:RadWindow>